{
    "display_information": {
      "name": "Slack Support App",
      "description": "A bot to assist with support and channel management.",
      "background_color": "#4A154B"
    },
    "features": {
      "bot_user": {
        "display_name": "Support",
        "always_online": true
      }
    },
    "oauth_config": {
      "scopes": {
        "bot": [
          "channels:read",
          "channels:write",
          "chat:write",
          "chat:write.customize",
          "im:write",
          "users:read",
          "commands",
          "app_mentions:read"
        ]
      }
    },
    "settings": {
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
  }
  